{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "packageRules": [
    {
      "matchManagers": [
        "nuget"
      ],
      "matchPackageNames": [
        "Microsoft.AspNetCore.Components.Web",
        "Microsoft.CodeAnalysis.CSharp",
        "Spectre.Console"
      ]
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchUpdateTypes": [
        "digest",
        "major",
        "patch",
        "minor",
        "pin"
      ],
      "automerge": true,
      "automergeType": "pr",
      "platformAutomerge": false
    }
  ]
}
